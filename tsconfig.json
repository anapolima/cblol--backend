{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "allowJs": true,
        "rootDir": ".",
        "outDir": "./dist/lib",
        "declarationDir": "./dist/@types",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./src/@types", "node_modules/@types"],
        "baseUrl": "./src",
    },
    "include": ["src/**/*", "**/*.spec.ts"],
}